<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/login_cancel_btn"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_margin="0dp"
            android:layout_weight="0"
            android:padding="10dp"
            app:srcCompat="@drawable/cancle_btn" />

        <android.support.design.widget.TabLayout
            android:id="@+id/login_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:tabIndicatorColor="@color/expedia_light_blue"
            app:tabSelectedTextColor="@color/expedia_light_blue"
            app:tabTextColor="#000066">

        </android.support.design.widget.TabLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="20dp"
        android:background="#999999" />

    <android.support.v4.view.ViewPager
        android:id="@+id/login_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>