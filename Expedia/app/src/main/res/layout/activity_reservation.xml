<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_default">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/cancel_btn"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_margin="0dp"
            android:layout_weight="0"
            android:padding="10dp"
            app:srcCompat="@drawable/cancel_btn" />

        <TextView
            android:id="@+id/title_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/reservation"
            android:textColor="@color/expedia_darkblue"
            android:gravity="center_vertical"
            android:textSize="16sp"
            >

        </TextView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="20dp"
        android:background="#999999" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hotel_name"
                android:textColor="@color/expedia_darkblue"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/expedia_darkblue"
                android:text=" : " />

            <TextView
                android:id="@+id/hotelName_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="서귀포 칼 호텔"
                android:textColor="@color/expedia_darkblue"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room"
                android:textColor="@color/expedia_darkblue"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/expedia_darkblue"
                android:text=" : " />

            <TextView
                android:id="@+id/room_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="방1 Delux"
                android:textColor="@color/expedia_darkblue"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/option_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(침대: single, 무료와이파이, 무료 주차장)"
            android:textColor="@color/expedia_darkblue"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_in_date"
                android:textColor="@color/expedia_darkblue"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/expedia_darkblue"
                android:text=" : " />

            <TextView
                android:id="@+id/checkIn_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2019년 5월 1일"
                android:textColor="@color/expedia_darkblue"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_out_date"
                android:textColor="@color/expedia_darkblue"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/expedia_darkblue"
                android:text=" : " />

            <TextView
                android:id="@+id/checkOut_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2019년 5월 2일"
                android:textColor="@color/expedia_darkblue"
                android:textSize="18sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:textColor="@color/expedia_darkblue"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textColor="@color/expedia_darkblue"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/price_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/expedia_darkblue"
                    android:textSize="18sp"
                    tools:text="￦20.0000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rating_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rating"
                    android:textColor="@color/expedia_darkblue"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textColor="@color/expedia_darkblue"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/rating_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/expedia_darkblue"
                    android:textSize="18sp"
                    tools:text="★ 4.2" />
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/additionalInfo_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/additional_information"
            android:textColor="@color/expedia_darkblue"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:id="@+id/lastName_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                android:textColor="@color/expedia_darkblue"
                android:layout_gravity="center_vertical"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/expedia_darkblue"
                android:layout_gravity="center_vertical"
                android:text=" : " />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_corner_round_default">


                <EditText
                    android:id="@+id/lastName_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/last_name"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textColorHint="#aaaaaa" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/firstName_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/expedia_darkblue"
                android:layout_gravity="center_vertical"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/expedia_darkblue"
                android:layout_gravity="center_vertical"
                android:text=" : " />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_corner_round_default">


                <EditText
                    android:id="@+id/firstName_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/name"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textColorHint="#aaaaaa" />
            </FrameLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/changeCondition_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/expedia_light_blue"
            android:text="@string/change_condition"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/reservation_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/corner_round"
            android:text="@string/reserve"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>